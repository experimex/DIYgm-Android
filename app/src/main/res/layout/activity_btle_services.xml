<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_BTLE_Services">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_large"
                android:text="Name"
                android:id="@+id/tv_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium"
                android:text="Address"
                android:id="@+id/tv_address"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:fillViewport="true"
                android:id="@+id/scrollView">

                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:groupIndicator="@null"
                    android:id="@+id/lv_expandable"></ExpandableListView>

            </ScrollView>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        xmlns:tools="http://schemas.android.com/tools">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Switch
                    android:id="@+id/auto_mark_switch"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Auto-Mark "
                    android:checked="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/mark_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Mark"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    />
                <Button
                    android:id="@+id/disconnect_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Disconnect"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="110dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/undo_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Undo Marker"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    />
                <Button
                    android:id="@+id/removeall_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Remove All"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    />
                <Button
                    android:id="@+id/export_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Export Button"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="110dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/countlabel_label"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:text="Count Rate:"
                />

            <TextView
                android:id="@+id/count_text"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textSize="100dp" />

            <TextView
                android:id="@+id/marker_count_text"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:text="Marker Count: 0" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>

